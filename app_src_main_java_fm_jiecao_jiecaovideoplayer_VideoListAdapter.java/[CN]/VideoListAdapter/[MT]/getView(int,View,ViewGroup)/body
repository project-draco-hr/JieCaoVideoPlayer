{
  ViewHolder viewHolder;
  if (null == convertView) {
    viewHolder=new ViewHolder();
    LayoutInflater mInflater=LayoutInflater.from(context);
    convertView=mInflater.inflate(R.layout.item_videoview,null);
    viewHolder.jcVideoPlayer=(JCVideoPlayerStandard)convertView.findViewById(R.id.videoplayer);
    convertView.setTag(viewHolder);
  }
 else {
    viewHolder=(ViewHolder)convertView.getTag();
  }
  viewHolder.jcVideoPlayer.setUp(videoUrls[videoIndexs[position]],videoTitles[videoIndexs[position]]);
  ImageLoader.getInstance().displayImage(videoThumbs[videoIndexs[position]],viewHolder.jcVideoPlayer.thumbImageView);
  return convertView;
}

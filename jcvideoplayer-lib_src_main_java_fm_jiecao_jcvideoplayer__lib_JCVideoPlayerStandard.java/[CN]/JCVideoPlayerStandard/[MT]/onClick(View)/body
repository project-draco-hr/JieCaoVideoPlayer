{
  super.onClick(v);
  int i=v.getId();
  if (i == R.id.thumb) {
    if (CURRENT_STATE == CURRENT_STATE_NORMAL) {
      ivStart.performClick();
    }
  }
 else   if (i == R.id.surface_container) {
    onClickUiToggle();
    startDismissControlViewTimer();
  }
 else   if (i == R.id.back) {
    backFullscreen();
  }
}

case SCREEN_WINDOW_FULLSCREEN:
setAllControlsVisible(View.INVISIBLE,View.INVISIBLE,View.VISIBLE,View.INVISIBLE,View.INVISIBLE,View.VISIBLE,View.INVISIBLE);
updateStartImage();
clearCoverImage();
break;
case SCREEN_WINDOW_TINY:
break;
}
}

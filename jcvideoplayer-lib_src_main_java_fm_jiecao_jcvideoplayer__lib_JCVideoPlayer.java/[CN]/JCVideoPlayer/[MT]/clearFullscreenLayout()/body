{
  ViewGroup vp=(ViewGroup)((Activity)getContext()).getWindow().getDecorView();
  View oldF=vp.findViewById(FULLSCREEN_ID);
  View oldT=vp.findViewById(TINY_ID);
  if (oldF != null) {
    vp.removeView(oldF);
  }
  if (oldT != null) {
    vp.removeView(oldT);
  }
  showSupportActionBar(getContext());
}

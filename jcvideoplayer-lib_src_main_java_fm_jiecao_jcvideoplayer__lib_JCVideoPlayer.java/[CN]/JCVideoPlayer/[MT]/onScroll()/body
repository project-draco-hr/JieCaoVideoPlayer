{
  if (JCVideoPlayerManager.getCurrentScrollPlayerListener() != null && JCVideoPlayerManager.getCurrentScrollPlayerListener() == JCVideoPlayerManager.getFirst()) {
    Log.i(JCVideoPlayer.TAG,"onScroll if");
    JCVideoPlayerManager.getCurrentScrollPlayerListener().onScrollChange();
  }
 else   if (JCVideoPlayerManager.LISTENERLIST.size() > 1 && ((JCVideoPlayer)JCVideoPlayerManager.getFirst()).currentScreen == SCREEN_WINDOW_TINY && JCVideoPlayerManager.getCurrentScrollPlayerListener() == JCVideoPlayerManager.LISTENERLIST.get(1).get()) {
    Log.i(JCVideoPlayer.TAG,"onScroll else if");
    JCVideoPlayerManager.getCurrentScrollPlayerListener().onScrollChange();
  }
}
